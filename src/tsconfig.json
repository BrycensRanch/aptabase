{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@features/billing": ["./webapp/features/billing"],
      "@features/support": ["./webapp/features/support"],
      "@features/env": ["./webapp/features/env"],
      "@features/analytics": ["./webapp/features/analytics"],
      "@features/primitives": ["./webapp/features/primitives"],
      "@features/apps": ["./webapp/features/apps"],
      "@features/navigation": ["./webapp/features/navigation"],
      "@features/auth": ["./webapp/features/auth"],
      "@features/theme": ["./webapp/features/theme"]
    }
  },
  "references": [{ "path": "./tsconfig.node.json" }]
}
